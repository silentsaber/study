@import '../../style/pagefonter.wxss';
#backimg
{
  position: absolute;
  height:100%;
  width:100%;
  z-index: 0;
}
#logo {
    vertical-align: center;
    position: relative;
    top:400rpx;
    font-weight: 600;
    font-size: 28px;
    font-family: "HYZhuZiTongNianTiW";
    /* font-family: "MingLiU"; */
    color: #d3e098;
    background: -webkit-linear-gradient(45deg,  #7303c0, #ec38bc, #fdeff9,#E1BEE7, #B2EBF2);
    -moz-linear-gradient:(45deg, #70f7fe, #fbd7c6, #fdefac, #bfb5dd, #bed5f5);
    -ms-linear-gradient:(45deg, #70f7fe, #fbd7c6, #fdefac, #bfb5dd, #bed5f5);
    color:transparent;
    /*设置字体颜色透明*/
    -webkit-background-clip: text;
    /*背景裁剪为文本形式*/
    animation: ran 15s linear infinite;
    /*动态10s展示*/
}

@keyframes ran {
    from {
        backgroud-position: 0 0;
    }
    to {
        background-position: 2000px 0;
    }
}

@keyframes maskBorder1 {
  
  0%
  {
    width:0%;
    left:5%;
  }
  20%
  {
    width:30%;
    left:5%;
  }
  50%
  {
    width:30%;
    left:35%；
  }
  80%
  {
    width:30%;
    left:65%;
  }
  100%
  {
    width:0%;
    left:95%;
  }
}
@keyframes maskBorder2 {
  
  0%
  {
    left:95%;
    height:0%;
    top:5%;
  }
  20%
  {
     left:95%;
    height:20%;
    top:5%;
  }
  50%
  {
     left:95%;
     height:20%;
    top:40%;
  }
  80%
  {
    left:95%;
     height:20%;
    top:75%;
  }
  100%
  {
     left:95%;
     height:0%;
    top:95%;
  }
}
@keyframes maskBorder3 {
  
  0%
  {
    left:95%;
    width:0%;
    top:95%;
  }
  20%
  {
    left:65%;
    width:30%;
    top:95%;
  }
  50%
  {
    top:95%;
    left:35%;
    width:30%;
  }
  80%
  {
    top:95%;
    left:5%;
    width:30%;
  }
  100%
  {
     top:95%;
    left:5%;
    width:0%;
  }
}
@keyframes maskBorder4 {
  
  0%
  {
    left:5%;
    height:0%;
    top:95%;
  }
  20%
  {
     left:5%;
    height:20%;
    top:75%;
  }
  50%
  {
     left:5%;
     height:20%;
    top:40%;
  }
  80%
  {
    left:5%;
     height:20%;
    top:5%;
  }
  100%
  {
     left:5%;
     height:0%;
    top:5%;
  }
}


